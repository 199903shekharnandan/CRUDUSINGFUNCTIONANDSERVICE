@using CRUDModels;

@model List<CRUDModels.CreateViewModel>;

<h1>Index</h1>
<a asp-action="Create" asp-controller="Create" class="btn btn-primary">Create</a>
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>FirstName</td>
            <td>LastName</td>
            <td>Address</td>
            <td>Email</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var a in Model)
        {
            <tr>
                <td>@a.Id</td>
                <td>@a.FirstName</td>
                <td>@a.LastName</td>
                <td>@a.Address</td>
                <td>@a.Email</td>
                <td>
                    <a type="button" class="btn btn-danger" asp-action="DeactivateData" asp-route-id="@a.Id">Delete</a>
                    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@a.Id">Update</a>

                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Create">Create to List</a>
</div>

